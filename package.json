{
  "name": "studybuddy-extension-plasmo",
  "displayName": "Studybuddy extension plasmo",
  "version": "0.0.1",
  "description": "Download Panopto recordings.",
  "author": "novarii",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.8.6",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "cross-env": "7.0.3",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "scripting",
      "notifications",
      "cookies"
    ],
    "host_permissions": [
      "https://*.panopto.com/*",
      "https://*.panopto.eu/*",
      "http://localhost:8000/*",
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }
}
